<def-group>

  <definition class="inventory" id="rhcos4_rhel8" version="1">
    {{{ oval_metadata("Operating System is RHCOS4 based on RHEL-8", affected_platforms=["multi_platform_all"]) }}}
    <criteria operator="AND">
      <extend_definition comment="Operating System is RHCOS4 based on RHEL-8"
      definition_ref="installed_OS_is_rhcos4" />
      <criterion comment="The base major RHEL version is 8"
      test_ref="test_rhcos_based_on_rhel8" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" comment="RHEL_VERSION in os-release starts with 8.x" id="test_rhcos_based_on_rhel8" version="1">
    <ind:object object_ref="obj_rhcos_based_on_rhel8" />
    <ind:state state_ref="state_rhcos_based_on_rhel8" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_rhcos_based_on_rhel8" version="1">
    <ind:filepath>/etc/os-release</ind:filepath>
    <ind:pattern operation="pattern match">^RHEL_VERSION=&quot;(\d)\.\d+&quot;$</ind:pattern>
    <ind:instance operation="greater than or equal" datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  <ind:textfilecontent54_state id="state_rhcos_based_on_rhel8" version="1">
    <ind:subexpression operation="pattern match">4</ind:subexpression>
  </ind:textfilecontent54_state>

</def-group>
